{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node16",
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "lib": ["es2015"],
  "strict": true
}
